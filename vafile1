import java.util.HashMap; public class ComputeHashMapExample { public static void main(String[] args) { // Creating a HashMap HashMap<String, Integer> map = new HashMap<>(); // Adding elements to the HashMap map.put("Apple", 10); map.put("Banana", 20); // Using computeIfAbsent map.computeIfAbsent("Cherry", key -> 30); // Using computeIfPresent map.computeIfPresent("Banana", (key, value) -> value + 10); // Displaying the HashMap System.out.println("HashMap: " + map); }

public class CheckKeyHashMapExample { public static void main(String[] args) { // Creating a HashMap HashMap<String, Integer> map = new HashMap<>(); // Adding elements to the HashMap map.put("Apple", 10); map.put("Banana", 20); map.put("Cherry", 30); // Checking if a key exists if (map.containsKey("Banana")) { System.out.println("Banana exists in the HashMap"); } // Checking if a value exists if (map.containsValue(30)) { System.out.println("Value 30 exists in the HashMap"); } } }

